extends layout

block content
  h2 Admin Panel
  p.
    Various information about the current status of the application.
  h2 Webhook Subscriptions
  form(action="/admin/subscribe" method="post")
    button(type="submit") Subscribe
  button(type="button", onclick="window.open('https://work.mengk.sb.facebook.com/v3.2/dialog/work_app_install?client_id=329713124440482&redirect_uri=https%3A%2F%2Fkaizhi.me','MyWindow',width=100,height=200);") Install
  if subscriptions.length === 0
    p No active webhook subscriptions.
  else
    table
      thead
        tr
          th Topic
          th Fields
          th Callback URL
      tbody
      each subscription in subscriptions
        tr
          td= subscription.object
          td= subscription.fields.map(f => f.name).join(', ')
          td= subscription.callback_url
